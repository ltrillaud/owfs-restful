{
  "name": "owfs-restful",
  "version": "1.7.1",
  "description": "OWFS Restful server written in Typescript",
  "main": "src/app.ts",
  "license": "MIT",
  "author": "Laurent Trillaud <laurent@trillaud.com>",
  "keywords": [
    "OWFS",
    "OneWire",
    "Dallas",
    "Maxim",
    "Semiconductor",
    "Typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltrillaud/owfs-restful.git"
  },
  "bugs": {
    "url": "https://github.com/ltrillaud/owfs-restful/issues"
  },
  "homepage": "https://github.com/ltrillaud/owfs-restful#readme",
  "scripts": {
    "serve": "nodemon",
    "watch:app": "./node_modules/.bin/tsc --watch",
    "build:app": "rm -r ./dist && ./node_modules/.bin/tsc",
    "release": "standard-version -a && git push --follow-tags",
    "pack:app": "npm pack"
  },
  "nodemonConfig": {
    "ignore": [
      ".vscode",
      ".git",
      "node_modules/"
    ],
    "execMap": {
      "ts": "node -r ./node_modules/ts-node/register"
    },
    "ext": "js,json,ts"
  },
  "files": [
    "dist/**/*",
    "src/assets/"
  ],
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "cron-parser": "^4.7.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.4",
    "node-cron": "^3.0.2",
    "prom-client": "^14.1.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "serve-favicon": "^2.5.0",
    "suncalc": "^1.9.0",
    "typedi": "^0.10.0",
    "undici": "^5.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^18.11.9",
    "@types/node-cron": "^3.0.6",
    "@types/serve-favicon": "^2.5.3",
    "@types/suncalc": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.40.1",
    "dprint": "^0.32.2",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.20",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
