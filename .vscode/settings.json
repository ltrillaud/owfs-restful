{
  "files.exclude": {
    "src/**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    }
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnPaste": true,
  "eslint.format.enable": true,
  "eslint.validate": [
    "typescript"
  ],
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
}
